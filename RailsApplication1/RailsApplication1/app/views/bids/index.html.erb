<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Project</th>
      <th>Bid text</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.team_id %></td>
        <td><%= bid.project_id %></td>
        <td><%= bid.bid_text %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

